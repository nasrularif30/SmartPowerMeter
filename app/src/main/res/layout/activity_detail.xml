<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bg_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity">

    <RelativeLayout
        android:id="@+id/lyheader"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/ic_bg_header"
        android:layout_marginHorizontal="30dp"
        android:layout_centerHorizontal="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">
            <ImageView
                android:id="@+id/logo"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_margin="10dp"
                android:layout_marginHorizontal="16dp"
                android:src="@drawable/ic_idea"
                />
            <TextView
                android:layout_toRightOf="@id/logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Smart \nPower Meter"
                android:textColor="@color/biru_tua"
                android:layout_centerVertical="true"
                android:textSize="28sp"
                android:fontFamily="@font/righteousregular"/>
        </RelativeLayout>
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_namalab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/lyheader"
        android:text="Laboratorium,\nTelekomunikasi"
        android:fontFamily="@font/righteousregular"
        android:textColor="@color/putih_pucat"
        android:textSize="36sp"
        android:gravity="top"
        />
    <LinearLayout
        android:id="@+id/atas"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/tv_namalab"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_tegangan"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:background="@color/putih_pucat"
            android:layout_marginHorizontal="10dp"
            app:cardCornerRadius="12dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center">
                <TextView
                    android:id="@+id/tv_tegangan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="220.0"
                    android:gravity="center_horizontal"
                    android:textSize="46sp"
                    android:textColor="@color/biru_tua"
                    android:layout_marginTop="20dp"
                    />
                <TextView
                    android:id="@+id/label_tegangan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tegangan\n(V)"
                    android:layout_below="@+id/tv_tegangan"
                    android:layout_marginTop="20dp"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:textColor="@color/biru_tua"
                    android:textStyle="normal"
                    android:textSize="24sp"
                    />
            </RelativeLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_arus"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:background="@color/putih_pucat"
            android:layout_marginHorizontal="10dp"
            app:cardCornerRadius="12dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center">
                <TextView
                    android:id="@+id/tv_arus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="6.50"
                    android:gravity="center_horizontal"
                    android:textSize="46sp"
                    android:textColor="@color/biru_tua"
                    android:layout_marginTop="20dp"
                    />
                <TextView
                    android:id="@+id/label_arus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Arus\n(A)"
                    android:layout_below="@+id/tv_arus"
                    android:layout_marginTop="20dp"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:textColor="@color/biru_tua"
                    android:textStyle="normal"
                    android:textSize="24sp"
                    />
            </RelativeLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/atas"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_daya"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:background="@color/putih_pucat"
            android:layout_marginHorizontal="10dp"
            app:cardCornerRadius="12dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center">
                <TextView
                    android:id="@+id/tv_daya"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="10.0"
                    android:gravity="center_horizontal"
                    android:textSize="46sp"
                    android:textColor="@color/biru_tua"
                    android:layout_marginTop="20dp"
                    />
                <TextView
                    android:id="@+id/label_daya"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Daya\n(Watt)"
                    android:layout_below="@+id/tv_daya"
                    android:layout_marginTop="20dp"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:textColor="@color/biru_tua"
                    android:textStyle="normal"
                    android:textSize="24sp"
                    />
            </RelativeLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_energi"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:background="@color/putih_pucat"
            android:layout_marginHorizontal="10dp"
            app:cardCornerRadius="12dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center">
                <TextView
                    android:id="@+id/tv_energi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="12.50"
                    android:gravity="center_horizontal"
                    android:textSize="46sp"
                    android:textColor="@color/biru_tua"
                    android:layout_marginTop="20dp"
                    />
                <TextView
                    android:id="@+id/label_energi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Energi\n(KWh)"
                    android:layout_below="@+id/tv_energi"
                    android:layout_marginTop="20dp"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:textColor="@color/biru_tua"
                    android:textStyle="normal"
                    android:textSize="24sp"
                    />
            </RelativeLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="Logout"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:background="@drawable/bg_button_biru"
        android:textColor="@color/white"/>

</RelativeLayout>