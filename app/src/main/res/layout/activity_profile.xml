<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main"
    tools:context=".ProfileActivity"
    tools:ignore="UseAppTint">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/foto_profile"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        app:civ_border_color="@color/white"
        app:civ_border_width="1dp"
        android:src="@drawable/ic_outline_person_24"
        android:background="@color/white"/>

    <TextView
        android:id="@+id/txt_nama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nama Saya"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_below="@+id/foto_profile"
        android:textColor="@color/white"
        android:layout_marginTop="16dp"
        android:textSize="28dp"
        android:fontFamily="@font/righteousregular"/>
    <TextView
        android:id="@+id/txt_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="username"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_below="@+id/txt_nama"
        android:textColor="@color/putih_pucat"
        android:layout_marginVertical="3dp"
        android:textSize="28dp"
        android:fontFamily="@font/righteousregular"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/txt_username"
        android:layout_marginHorizontal="16dp"
        app:cardCornerRadius="12dp"
        android:layout_marginBottom="16dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingHorizontal="20dp">
                    <EditText
                        android:id="@+id/et_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:hint="nama"
                        android:drawableLeft="@drawable/ic_outline_person_24"
                        android:drawablePadding="6dp"
                        android:singleLine="true"
                        android:maxLines="1"
                        android:inputType="textPersonName"
                        android:layout_marginHorizontal="10dp"/>
                    <EditText
                        android:id="@+id/et_username"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:hint="username"
                        android:drawableLeft="@drawable/ic_username"
                        android:drawablePadding="6dp"
                        android:singleLine="true"
                        android:maxLines="1"
                        android:inputType="textEmailAddress"
                        android:layout_marginHorizontal="10dp"/>
                    <EditText
                        android:id="@+id/et_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:hint="password"
                        android:singleLine="true"
                        android:maxLines="1"
                        android:inputType="textPassword"
                        android:drawableLeft="@drawable/ic_outline_lock_24"
                        android:drawablePadding="6dp"
                        android:layout_marginHorizontal="10dp"/>
                    <EditText
                        android:id="@+id/et_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:hint="alamat email"
                        android:singleLine="true"
                        android:maxLines="1"
                        android:inputType="textEmailAddress"
                        android:drawableLeft="@drawable/ic_outline_email_24"
                        android:drawablePadding="6dp"
                        android:layout_marginHorizontal="10dp"/>
                    <EditText
                        android:id="@+id/et_telfon"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:hint="nomor handphone"
                        android:singleLine="true"
                        android:maxLines="1"
                        android:inputType="phone"
                        android:drawableLeft="@drawable/ic_baseline_phone_android_24"
                        android:drawablePadding="6dp"
                        android:layout_marginHorizontal="10dp"/>
                    <EditText
                        android:id="@+id/et_alamat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:hint="alamat"
                        android:singleLine="true"
                        android:maxLines="1"
                        android:inputType="textPostalAddress"
                        android:drawableLeft="@drawable/ic_outline_home_24"
                        android:drawablePadding="6dp"
                        android:layout_marginHorizontal="10dp"/>
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_ubah"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="UBAH DATA"
                        android:layout_marginHorizontal="90dp"
                        android:textColor="@color/putih_pucat"
                        android:background="@drawable/bg_button_biru"
                        android:paddingLeft="10dp"
                        android:drawableTint="@color/putih_pucat"
                        android:drawableLeft="@drawable/ic_baseline_edit_24"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="20dp" />
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_logout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="90dp"
                        android:text="LOGOUT"
                        android:textColor="@color/putih_pucat"
                        android:background="@color/merah"
                        android:paddingLeft="10dp"
                        android:drawableTint="@color/putih_pucat"
                        android:drawableLeft="@drawable/ic_log_out"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="8dp" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_save"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SIMPAN"
                        android:textColor="@color/putih_pucat"
                        android:background="@drawable/bg_button_biru"
                        android:paddingLeft="10dp"
                        android:drawableTint="@color/putih_pucat"
                        android:drawableLeft="@drawable/ic_baseline_save_24"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="30dp"
                        android:visibility="gone"
                        />
                </LinearLayout>
            </ScrollView>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>