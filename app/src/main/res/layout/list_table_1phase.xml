<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="10dp"
    android:layout_marginVertical="1dp">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="1dp"
        android:backgroundTint="@color/cardview_light_background">
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:rowCount="1"
            android:columnCount="7"
            android:layout_margin="8dp">
            <TextView
                android:id="@+id/txt_id"
                android:gravity="center_horizontal"
                android:textSize="14sp"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_gravity="fill"
                android:layout_columnWeight="1"
                android:textColor="@color/biru_tua"
                android:text="ID"/>
            <TextView
                android:id="@+id/txt_voltage"
                android:gravity="center_horizontal"
                android:textSize="14sp"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_gravity="fill"
                android:layout_columnWeight="1"
                android:textColor="@color/biru_tua"
                android:text="Voltage\n(V)"/>
            <TextView
                android:id="@+id/txt_arus"
                android:gravity="center_horizontal"
                android:textSize="14sp"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="2"
                android:layout_gravity="fill"
                android:layout_columnWeight="1"
                android:textColor="@color/biru_tua"
                android:text="Arus\n(A)"/>
            <TextView
                android:id="@+id/txt_power"
                android:gravity="center_horizontal"
                android:textSize="14sp"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="3"
                android:layout_gravity="fill"
                android:layout_columnWeight="1"
                android:textColor="@color/biru_tua"
                android:text="Power\n(Watt)"/>
            <TextView
                android:id="@+id/txt_energy"
                android:gravity="center_horizontal"
                android:textSize="14sp"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="4"
                android:layout_gravity="fill"
                android:layout_columnWeight="1"
                android:textColor="@color/biru_tua"
                android:text="Energy\n(Joule)"/>
            <TextView
                android:id="@+id/txt_time"
                android:gravity="center_horizontal"
                android:textSize="14sp"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="5"
                android:layout_gravity="fill"
                android:layout_columnWeight="1"
                android:textColor="@color/biru_tua"
                android:text="Time"/>
<!--            <TextView-->
<!--                android:id="@+id/txt_biaya"-->
<!--                android:gravity="center_horizontal"-->
<!--                android:textSize="14sp"-->
<!--                android:layout_width="60dp"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_row="0"-->
<!--                android:layout_column="6"-->
<!--                android:layout_gravity="fill"-->
<!--                android:layout_columnWeight="1"-->
<!--                android:textColor="@color/biru_tua"-->
<!--                android:text="Biaya"/>-->
        </GridLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>