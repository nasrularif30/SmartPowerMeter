<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DateHistoryActivity">
    <LinearLayout
        android:id="@+id/lypilihan"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_pilihan"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="6dp"
            android:layout_weight="1"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardCornerRadius="3dp"
            app:cardElevation="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:background="@color/biru_tua"
                    android:layout_marginTop="6dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pilih Tanggal"
                        android:layout_margin="6dp"
                        android:textColor="@color/kuning"
                        android:textSize="16sp"
                        android:fontFamily="@font/righteousregular"
                        android:layout_centerVertical="true"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="6dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dari Tanggal"
                        android:layout_margin="6dp"
                        android:layout_centerVertical="true"/>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/tglawal"
                        android:layout_width="160dp"
                        android:layout_height="50dp"
                        android:layout_alignParentEnd="true"
                        android:backgroundTint="#F6F6F6"
                        android:layout_marginEnd="6dp"
                        app:cardCornerRadius="6dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="6dp">
                        <TextView
                            android:id="@+id/tvtglawal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="left"
                            android:padding="3dp"
                            android:background="@drawable/bg_spinner"
                            android:drawableRight="@drawable/ic_date_range"
                            android:gravity="left|center_vertical"
                            android:layout_marginLeft="6dp"
                            android:text="--Pilih Tanggal Awal--"
                            android:textSize="10dp" />
                    </androidx.cardview.widget.CardView>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="6dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hingga Tanggal"
                        android:layout_margin="6dp"
                        android:layout_centerVertical="true"/>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/tglakhir"
                        android:layout_width="160dp"
                        android:layout_height="50dp"
                        app:cardCornerRadius="6dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="6dp"
                        android:backgroundTint="#F6F6F6"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="6dp">
                        <TextView
                            android:id="@+id/tvtglakhir"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="--Pilih Tanggal Akhir--"
                            android:textSize="10dp"
                            android:drawableRight="@drawable/ic_date_range"
                            android:padding="3dp"
                            android:background="@drawable/bg_spinner"
                            android:layout_marginLeft="6dp"
                            android:gravity="left|center_vertical"/>
                    </androidx.cardview.widget.CardView>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="6dp"
                    android:orientation="horizontal"
                    android:layout_marginEnd="6dp"
                    android:layout_marginRight="6dp">
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_tampilhistory"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="TAMPILKAN"
                        android:gravity="center"
                        android:layout_alignParentRight="true"
                        android:backgroundTint="@color/biru_tua"
                        android:textColor="@color/kuning"/>
                </RelativeLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</RelativeLayout>