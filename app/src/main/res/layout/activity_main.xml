<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/lyheader"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/ic_bg_header"
        android:layout_marginHorizontal="30dp"
        android:layout_centerHorizontal="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">
            <ImageView
                android:id="@+id/logo"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_margin="10dp"
                android:layout_marginHorizontal="16dp"
                android:src="@drawable/ic_idea"
                />
            <TextView
                android:layout_toRightOf="@id/logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Smart \nPower Meter"
                android:textColor="@color/biru_tua"
                android:layout_centerVertical="true"
                android:textSize="28sp"
                android:fontFamily="@font/righteousregular"/>
        </RelativeLayout>
    </RelativeLayout>
    <TextView
        android:id="@+id/welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/lyheader"
        android:text="Welcome,\nSilfina"
        android:fontFamily="@font/righteousregular"
        android:textColor="@color/putih_pucat"
        android:textSize="36sp"
        android:gravity="top"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/welcome"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">
        <androidx.cardview.widget.CardView
            android:id="@+id/labtel"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:background="@color/putih_pucat"
            android:layout_marginHorizontal="10dp"
            app:cardCornerRadius="12dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center">
                <ImageView
                    android:id="@+id/ic_labtel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_labtel"
                    android:layout_marginTop="20dp"
                    />
                <TextView
                    android:id="@+id/tv_labtel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Laboratorium\nTelekomunikasi"
                    android:layout_below="@+id/ic_labtel"
                    android:layout_marginTop="20dp"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:textColor="@color/biru_tua"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    />
            </RelativeLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/pju"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:background="@color/putih_pucat"
            android:layout_marginHorizontal="10dp"
            app:cardCornerRadius="12dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center">
                <ImageView
                    android:id="@+id/ic_pju"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_pju"
                    android:layout_marginTop="20dp"
                    />
                <TextView
                    android:id="@+id/tv_pju"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Penerangan\nJalan Umum"
                    android:layout_below="@+id/ic_pju"
                    android:layout_marginTop="20dp"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:textColor="@color/biru_tua"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    />
            </RelativeLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:tint="@color/white"
        android:backgroundTint="@color/white"
        android:src="@drawable/ic_outline_person_24"
        />
</RelativeLayout>